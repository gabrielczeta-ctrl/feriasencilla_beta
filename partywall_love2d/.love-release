# Love2D Release Configuration
# Build settings for cross-platform distribution

# Project information
GAME_TITLE="Partywall - Multiplayer Physics Canvas"
GAME_PACKAGE_NAME="partywall_multiplayer_canvas"
GAME_VERSION="1.0.0"
GAME_AUTHOR="Partywall Team"
GAME_DESCRIPTION="Real-time multiplayer physics-based drawing canvas"
GAME_URL="https://github.com/partywall/multiplayer-canvas"

# Build targets
BUILD_WINDOWS=true
